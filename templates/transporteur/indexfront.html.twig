{% extends 'templatefront.html.twig' %}


{% block body %}

 
        <div class="container">
  <h2>Entrez votre ID</h2>
  <div class="input-group mb-3">
  <input type="text" class="form-control" id="search-input" placeholder="Entrez votre ID" aria-label="Entrez votre ID" aria-describedby="button-addon2">
  <a href="#" id="search-link" class="btn btn-primary">Rechercher</a>
</div>

<script>
  // Get the search link and input elements
  const searchLink = document.getElementById('search-link');
  const searchInput = document.getElementById('search-input');

  // Add a click event listener to the search link
  searchLink.addEventListener('click', function(event) {
    // Prevent the default link behavior
    event.preventDefault();

    // Get the value of the input field
    const id = searchInput.value;

    // Construct the path with the input value
    const path = "{{ path('transporteur_show', {'id': 'id'}) }}".replace('id', id);

    // Navigate to the new path
    window.location.href = path;
  });
</script>

</div>
<style>
  /* Container for the form */
  .parent-container {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    height: 90vh;
    background-color: #f6f6f6;
    margin-right: 20px;
  }
  
  /* Style for the form */
  #contact-form {
    display: flex;
    flex-direction: column;
    width: 400px;
    padding: 30px;
    background-color: #fff;
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    border-radius: 5px;
  }

  /* Style for the form labels */
  #contact-form label {
    display: block;
    margin-bottom: 5px;
    font-weight: 600;
    color: #4a4a4a;
    text-align: left;
  }

  /* Style for the form fields */
  #contact-form input[type="text"] {
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 4px;
    box-sizing: border-box;
    margin-bottom: 20px;
    background-color: #f6f6f6;
