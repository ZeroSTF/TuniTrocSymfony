  <h2>Entrez votre ID</h2>
  <div class="input-group mb-3">
  <input type="text" class="form-control" id="search-input" placeholder="Entrez votre ID" aria-label="Entrez votre ID" aria-describedby="button-addon2">
  <a href="#" id="search-link" class="btn btn-primary">Rechercher</a>
</div>

<script>
  // Get the search link and input elements
  const searchLink = document.getElementById('search-link');
  const searchInput = document.getElementById('search-input');

  // Add a click event listener to the search link
  searchLink.addEventListener('click', function(event) {
    // Prevent the default link behavior
    event.preventDefault();

    // Get the value of the input field
    const id = searchInput.value;

    // Construct the path with the input value
    const path = "{{ path('transporteur_show', {'id': 'id'}) }}".replace('id', id);

    // Navigate to the new path
    window.location.href = path;
  });
</script>

