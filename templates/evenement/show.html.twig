{% extends 'template.html.twig' %}

{% block body %}
    <h1>Evenement</h1>
    <table class="table">
        <tbody>
        <tr>
            <th>ID :</th>
            <td>{{ evenement.id }}</td>
        </tr>
        <tr>
            <th>Nom :</th>
            <td>{{ evenement.nom }}</td>
        </tr>
        <tr>
            <th>Description :</th>
            <td>{{ evenement.description }}</td>
        </tr>
        <tr>
            <th>Date de début :</th>
            <td>{{ evenement.dateD ? evenement.dateD|date('Y-m-d') : '' }}</td>
        </tr>
        <tr>
            <th>Date de fin :</th>
            <td>{{ evenement.dateF ? evenement.dateF|date('Y-m-d') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_evenement_index') }}" class="btn btn-outline-secondary mt-3"><i class="fas fa-arrow-left"></i>
        Retour à la liste</a>

    <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-outline-primary mt-3"><i
                class="fas fa-edit"></i> Modifier l'événement</a>

    {{ include('evenement/_delete_form.html.twig') }}
{% endblock %}