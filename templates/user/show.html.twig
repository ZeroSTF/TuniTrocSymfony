{% extends 'template.html.twig' %}

{% block body %}
    <h1>Détails de l'utilisateur</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>ID :</th>
            <td>{{ user.id }}</td>
        </tr>
        <tr>
            <th>Email :</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Mot de passe :</th>
            <td>{{ user.pwd }}</td>
        </tr>
        <tr>
            <th>Nom :</th>
            <td>{{ user.nom }}</td>
        </tr>
        <tr>
            <th>Prénom :</th>
            <td>{{ user.prenom }}</td>
        </tr>
        <tr>
            <th>Photo :</th>
            <td>
                {% if user.photo %}
                    <img src="{{ asset('uploads/users/' ~ user.photo) }}" alt="Photo de l'utilisateur" width="100">
                {% else %}
                    Pas de photo
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>Numéro de téléphone :</th>
            <td>{{ user.numTel }}</td>
        </tr>
        <tr>
            <th>Ville :</th>
            <td>{{ user.ville }}</td>
        </tr>
        <tr>
            <th>Valeur de fidélité :</th>
            <td>{{ user.valeurFidelite }}</td>
        </tr>
        <tr>
            <th>Rôle :</th>
            <td>{{ user.role ? 'Administrateur' : 'Client' }}</td>
        </tr>
        <tr>
            <th>État :</th>
            <td>{{ user.etat }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}" class="btn btn-secondary mt-3">Retour à la liste</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary mt-3">Modifier l'utilisateur</a>

    {{ include('user/_delete_form.html.twig') }}

{% endblock %}
