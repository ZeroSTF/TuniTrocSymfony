{% extends 'templatefront.html.twig' %}

{% block body %}
    <h1>Login</h1>

    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <form method="post">
        {{ form_widget(form.email) }}
        {{ form_widget(form.password) }}
        {{ form_row(form._token) }}

        <button type="submit">Login</button>
    </form>
{% endblock %}