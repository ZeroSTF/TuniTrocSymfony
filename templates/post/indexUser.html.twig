{% extends 'templatefront.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
    <div class="text-center">
        <a href="{{ path('app_post_new') }}" class="btn btn-primary">Cr√©er un nouveau post</a>
    </div>
    {% for post in posts  %}
        <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 col-12 mb-5">
            <figure class="effect-ming tm-video-item">
                <img src="{{ asset('images/posts/')}}{{ post.image }}" alt="Image" class="img-fluid">
                <figcaption class="d-flex align-items-center justify-content-center">
                    <h2>{{ post.description }}</h2>
                    <a href="{{ path("app_post_show",{'id': post.idPost}) }}">View more</a>
                </figcaption>
            </figure>
            <div class="d-flex justify-content-between tm-text-gray">
                <span class="tm-text">{{ post.dateP ? post.dateP|date('Y-m-d') : '' }}</span>
                <span></span>
            </div>
        </div>
    {% endfor %}
{% endblock %}


