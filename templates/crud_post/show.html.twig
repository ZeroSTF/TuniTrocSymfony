{% extends 'base.html.twig' %}


{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ post.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ post.contenu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Id_user</th>
                <td>{{ post.idUser }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ post.likes }}</td>
            </tr>
            <tr>
                <th>Dislikes</th>
                <td>{{ post.dislikes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_c_r_u_d_post_index') }}">back to list</a>

    <a href="{{ path('app_c_r_u_d_post_edit', {'id': post.id}) }}">edit</a>

    {{ include('crud_post/_delete_form.html.twig') }}
{% endblock %}
