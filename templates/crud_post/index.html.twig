{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Date</th>
                <th>Id_user</th>
                <th>Likes</th>
                <th>Dislikes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.titre }}</td>
                <td>{{ post.contenu }}</td>
                <td>{{ post.date ? post.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ post.idUser }}</td>
                <td>{{ post.likes }}</td>
                <td>{{ post.dislikes }}</td>
                <td>
                    <a href="{{ path('app_c_r_u_d_post_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('app_c_r_u_d_post_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_c_r_u_d_post_new') }}">Create new</a>
{% endblock %}
