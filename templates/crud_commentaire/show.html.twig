{% extends 'admin/index.html.twig' %}

{% block title %}Commentaire{% endblock %}

{% block body %}
    <h1>Commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commentaire.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ commentaire.contenu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ commentaire.date ? commentaire.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ commentaire.likes }}</td>
            </tr>
            <tr>
                <th>Dislikes</th>
                <td>{{ commentaire.dislikes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_c_r_u_d_commentaire_index') }}">back to list</a>

    <a href="{{ path('app_c_r_u_d_commentaire_edit', {'id': commentaire.id}) }}" class="btn btn-primary">edit</a>

    {{ include('crud_commentaire/_delete_form.html.twig') }}
{% endblock %}
